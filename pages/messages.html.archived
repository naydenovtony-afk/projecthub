<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="ProjectHub Messages - Internal messaging system">
  <meta name="theme-color" content="#4158D0">
  <title>Messages - ProjectHub</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  
  <!-- Theme Initialization (prevents flash) -->
  <script>
    (function() {
      const savedTheme = localStorage.getItem('projecthub-theme') || 'light';
      const html = document.documentElement;
      
      if (savedTheme === 'dark') {
        html.setAttribute('data-bs-theme', 'dark');
        html.classList.add('dark-mode');
      } else if (savedTheme === 'auto') {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (prefersDark) {
          html.setAttribute('data-bs-theme', 'dark');
          html.classList.add('dark-mode');
        }
      }
    })();
  </script>
  
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="../styles/main.css">
  <link rel="stylesheet" href="../styles/animations.css">
  <link rel="stylesheet" href="../styles/themes.css">
  
  <style>
    .messages-container {
      height: calc(100vh - 160px);
      display: flex;
      flex-direction: column;
    }
    
    .message-list {
      flex: 1;
      overflow-y: auto;
      border: 1px solid var(--border-color);
      border-radius: 8px;
    }
    
    .message-item {
      padding: 1rem;
      border-bottom: 1px solid var(--border-color);
      cursor: pointer;
      transition: background-color 0.2s;
    }
    
    .message-item:hover {
      background-color: var(--hover-bg);
    }
    
    .message-item.unread {
      background-color: #f8f9fa;
      font-weight: 600;
    }
    
    .message-item.unread:hover {
      background-color: #e9ecef;
    }
    
    .message-item:last-child {
      border-bottom: none;
    }
    
    .message-item.selected {
      background-color: var(--primary-light);
      border-left: 3px solid var(--primary-color);
    }
    
    .message-preview {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .message-detail {
      height: 100%;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      display: flex;
      flex-direction: column;
    }
    
    .message-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    .message-body-container {
      flex: 1;
      padding: 1.5rem;
      overflow-y: auto;
    }
    
    .message-actions {
      padding: 1rem 1.5rem;
      border-top: 1px solid var(--border-color);
      background-color: var(--bg-secondary);
    }
    
    .empty-state {
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--text-muted);
    }
    
    .avatar-sm {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--primary-color);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 0.9rem;
    }
    
    .compose-form {
      max-width: 800px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="../index.html">
        <i class="bi bi-kanban-fill text-primary me-2 fs-4"></i>
        <span class="fw-bold">ProjectHub</span>
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="./dashboard.html">
              <i class="bi bi-speedometer2 me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./projects.html">
              <i class="bi bi-folder me-1"></i>Projects
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="./messages.html">
              <i class="bi bi-envelope me-1"></i>Messages
            </a>
          </li>
        </ul>
        
        <!-- Theme toggle -->
        <button class="btn btn-ghost" id="themeToggle" data-theme-toggle title="Toggle theme">
          <i class="bi bi-moon-fill" id="themeIcon"></i>
        </button>
        
        <!-- User menu -->
        <div class="dropdown ms-2">
          <button class="btn btn-ghost d-flex align-items-center" data-bs-toggle="dropdown">
            <div class="avatar-circle me-2" id="userAvatar">
              <i class="bi bi-person-fill"></i>
            </div>
            <span class="d-none d-lg-inline" id="userName">User</span>
            <i class="bi bi-chevron-down ms-2"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="./profile.html">
              <i class="bi bi-person me-2"></i>Profile
            </a></li>
            <li><a class="dropdown-item" href="./settings.html">
              <i class="bi bi-gear me-2"></i>Settings
            </a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="#" data-logout>
              <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="py-4">
    <div class="container-fluid">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 fw-bold mb-1">Messages</h1>
          <p class="text-muted mb-0">Communicate with your team</p>
        </div>
        <button class="btn btn-primary" id="composeBtn">
          <i class="bi bi-pencil-square me-2"></i>Compose
        </button>
      </div>

      <!-- Messages Interface -->
      <div class="row">
        <!-- Sidebar with message tabs and list -->
        <div class="col-lg-4 mb-4">
          <div class="card">
            <div class="card-body p-0">
              <!-- Tabs -->
              <ul class="nav nav-tabs border-bottom" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="inbox-tab" data-bs-toggle="tab" data-bs-target="#inbox" type="button" role="tab">
                    <i class="bi bi-inbox me-1"></i>Inbox
                    <span class="badge bg-primary ms-2" id="unreadBadge">0</span>
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button" role="tab">
                    <i class="bi bi-send me-1"></i>Sent
                  </button>
                </li>
              </ul>

              <!-- Tab content -->
              <div class="tab-content">
                <!-- Inbox -->
                <div class="tab-pane fade show active" id="inbox" role="tabpanel">
                  <div class="message-list" id="inboxList">
                    <div class="empty-state py-5">
                      <i class="bi bi-inbox fs-1 mb-3"></i>
                      <p>No messages in inbox</p>
                    </div>
                  </div>
                </div>

                <!-- Sent -->
                <div class="tab-pane fade" id="sent" role="tabpanel">
                  <div class="message-list" id="sentList">
                    <div class="empty-state py-5">
                      <i class="bi bi-send fs-1 mb-3"></i>
                      <p>No sent messages</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Message detail / compose area -->
        <div class="col-lg-8">
          <div class="card">
            <div class="card-body">
              <!-- Message Detail View -->
              <div id="messageDetail" style="display: none;">
                <div class="message-detail">
                  <div class="message-header">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                      <h5 class="mb-0" id="messageSubject">Message Subject</h5>
                      <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary" id="replyBtn" title="Reply">
                          <i class="bi bi-reply"></i>
                        </button>
                        <button class="btn btn-outline-danger" id="deleteBtn" title="Delete">
                          <i class="bi bi-trash"></i>
                        </button>
                      </div>
                    </div>
                    <div class="d-flex align-items-center">
                      <div class="avatar-sm me-3" id="messageSenderAvatar">U</div>
                      <div>
                        <div class="fw-medium" id="messageSenderName">Sender Name</div>
                        <small class="text-muted" id="messageTime">Just now</small>
                      </div>
                    </div>
                  </div>
                  <div class="message-body-container">
                    <div id="messageBody">Message body will appear here</div>
                  </div>
                </div>
              </div>

              <!-- Compose View -->
              <div id="composeView" style="display: none;">
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h5 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i><span id="composeTitle">New Message</span>
                  </h5>
                  <button class="btn btn-sm btn-ghost" id="cancelComposeBtn">
                    <i class="bi bi-x-lg"></i>
                  </button>
                </div>

                <form id="composeForm" class="compose-form">
                  <div class="mb-3">
                    <label for="recipientSelect" class="form-label">To:</label>
                    <select class="form-select" id="recipientSelect" required>
                      <option value="">Select recipient...</option>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label for="subjectInput" class="form-label">Subject:</label>
                    <input type="text" class="form-control" id="subjectInput" placeholder="Message subject" required>
                  </div>

                  <div class="mb-3">
                    <label for="bodyTextarea" class="form-label">Message:</label>
                    <textarea class="form-control" id="bodyTextarea" rows="10" placeholder="Type your message here..." required></textarea>
                  </div>

                  <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" id="sendBtn">
                      <i class="bi bi-send me-2"></i>Send Message
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="cancelBtn">Cancel</button>
                  </div>
                </form>
              </div>

              <!-- Empty State (default) -->
              <div id="emptyState" class="empty-state" style="min-height: 400px;">
                <i class="bi bi-envelope-open fs-1 mb-3"></i>
                <p>Select a message to read or compose a new one</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete Message</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this message? This action cannot be undone.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom Scripts -->
  <script type="module" src="../scripts/messages.js"></script>
  <script type="module" src="../scripts/theme.js"></script>
  <script type="module">
    import { checkAuth } from '../scripts/auth.js';
    checkAuth();
  </script>
</body>
</html>
